{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": ["pnpmDedupe"],
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "postUpgradeTasks": {
        "commands": ["pnpm i --frozen-lockfile && pnpm format"],
        "executionMode": "branch"
      }
    }
  ]
}
