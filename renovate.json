{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": ["pnpmDedupe"],
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "postUpgradeTasks": {
        "commands": ["CI=true pnpm i", "pnpm format"],
        "executionMode": "branch"
      }
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "bump",
      "enabled": true
    }
  ]
}
