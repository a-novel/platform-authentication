{
  "name": "@a-novel/platform-authentication",
  "version": "1.1.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/a-novel/platform-authentication.git"
  },
  "license": "AGPL-3.0",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "vite build && tsc --noEmit",
    "build:ci": "vite build",
    "dev": "sh ./scripts/dev.sh",
    "dev:ci": "vite dev",
    "format": "prettier --write . --config prettier.config.ts",
    "infra:down": "podman compose -p \"platform_authentication\" -f \"${PWD}/build/podman-compose.yaml\" down",
    "infra:up": "podman compose -p \"platform_authentication\" -f \"${PWD}/build/podman-compose.yaml\" up -d",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm lint:stylecheck && pnpm lint:typecheck && pnpm lint:eslint",
    "lint:eslint": "pnpm dlx eslint .",
    "lint:stylecheck": "prettier --check . --config prettier.config.ts",
    "lint:typecheck": "tsc",
    "publish:major": "pnpm version major && git push --follow-tags",
    "publish:minor": "pnpm version minor && git push --follow-tags",
    "publish:patch": "pnpm version patch && git push --follow-tags",
    "start": "sh ./scripts/start.sh",
    "start:ci": "node .output/server/index.mjs",
    "storybook:build": "storybook build",
    "storybook:dev": "storybook dev -p 6006",
    "test": "pnpm test:base:cleanup; pnpm test:base:unit && sh ./scripts/test.sh && pnpm test:base:report",
    "test:base:cleanup": "rm -rf coverage *.log port*.txt",
    "test:base:e2e": "playwright test",
    "test:base:prepare": "pnpm exec playwright install --with-deps",
    "test:base:report": "sh ./scripts/test-report.sh",
    "test:base:unit": "vitest --watch=false",
    "test:ci": "pnpm test:base:cleanup; pnpm test:base:prepare && pnpm test:base:unit && pnpm test:base:e2e && pnpm test:base:report"
  },
  "dependencies": {
    "@a-novel/connector-authentication": "^1.4.4",
    "@a-novel/package-authenticator": "^2.4.1",
    "@a-novel/package-ui": "^0.8.5",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource-variable/arimo": "^5.2.6",
    "@fontsource/arimo": "^5.2.6",
    "@fontsource/bungee": "^5.2.6",
    "@mui/material": "^7.2.0",
    "@tanstack/react-form": "^1.18.0",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-router": "^1.129.8",
    "@tanstack/react-router-with-query": "^1.129.8",
    "@tanstack/react-start": "^1.129.8",
    "@tanstack/zod-adapter": "^1.129.8",
    "@tolgee/format-icu": "^6.2.6",
    "@tolgee/react": "^6.2.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@a-novel/nodelib": "^0.7.3",
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/js": "^9.31.0",
    "@msw/playwright": "^0.4.2",
    "@playwright/test": "^1.54.1",
    "@storybook/addon-a11y": "^9.0.18",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/addon-vitest": "^9.0.18",
    "@storybook/react-vite": "^9.0.18",
    "@svgr/rollup": "^8.1.0",
    "@tanstack/eslint-plugin-query": "^5.81.2",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-istanbul": "3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.0.18",
    "get-port-please": "^3.2.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "storybook": "^9.0.18",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.38.0",
    "v8-to-istanbul": "^9.3.0",
    "vite": "^7.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=23.11.0",
    "npm": ">=10.9.2"
  }
}
