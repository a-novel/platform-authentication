{
  "name": "@a-novel/platform-authentication",
  "private": false,
  "sideEffects": false,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint:stylecheck": "prettier --check . --config prettier.config.ts",
    "lint:typecheck": "tsc",
    "lint:eslint": "pnpm dlx eslint .",
    "lint": "pnpm lint:stylecheck && pnpm lint:typecheck && pnpm lint:eslint",
    "format": "prettier --write . --config prettier.config.ts",
    "build": "vite build && tsc --noEmit",
    "start": "PORT=${CLIENT_PORT} node .output/server/index.mjs",
    "test": "vitest",
    "infra:up": "podman compose -p \"platform_authentication\" -f \"${PWD}/build/podman-compose.yaml\" up -d",
    "infra:down": "podman compose -p \"platform_authentication\" -f \"${PWD}/build/podman-compose.yaml\" down",
    "dev": "vite dev",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "publish:patch": "pnpm version patch && git push --follow-tags",
    "publish:minor": "pnpm version minor && git push --follow-tags",
    "publish:major": "pnpm version major && git push --follow-tags"
  },
  "license": "AGPL-3.0",
  "packageManager": "pnpm@10.13.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/a-novel/platform-authentication.git"
  },
  "engines": {
    "npm": ">=10.9.2",
    "node": ">=23.11.0"
  },
  "dependencies": {
    "@a-novel/connector-authentication": "^1.3.1",
    "@a-novel/neon-ui": "^2.8.2",
    "@a-novel/package-authenticator": "^1.5.1",
    "@a-novel/tanstack-start-config": "^1.3.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource-variable/arimo": "^5.2.6",
    "@fontsource/bungee": "^5.2.6",
    "@mui/material": "^7.2.0",
    "@tanstack/react-form": "^1.14.1",
    "@tanstack/react-query": "^5.81.5",
    "@tanstack/react-router": "^1.125.6",
    "@tanstack/react-router-with-query": "^1.127.1",
    "@tanstack/react-start": "^1.126.1",
    "@tanstack/zod-adapter": "^1.125.6",
    "@tolgee/format-icu": "^6.2.6",
    "@tolgee/react": "^6.2.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "5.0.0-next.0",
    "@eslint/js": "^9.30.1",
    "@storybook/addon-a11y": "9.1.0-alpha.6",
    "@storybook/addon-docs": "9.1.0-alpha.6",
    "@storybook/addon-vitest": "9.1.0-alpha.6",
    "@storybook/react-vite": "9.1.0-alpha.6",
    "@svgr/rollup": "^8.1.0",
    "@tanstack/eslint-plugin-query": "^5.81.2",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.0.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "9.1.0-alpha.6",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "nock": "^14.0.5",
    "prettier": "^3.6.2",
    "storybook": "9.1.0-alpha.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
