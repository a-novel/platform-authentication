{
  "name": "platform-authentication-stories",
  "version": "0.1.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-novel/platform-authentication.git"
  },
  "license": "AGPL-3.0",
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "svelte": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm i && pnpm build:base && pnpm build:storybook",
    "build:base": "vite build && npm run prepack",
    "build:storybook": "storybook build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "preinstall": "npx only-allow pnpm",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "prepare": "svelte-kit sync || echo ''",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "@a-novel-kit/nodelib-browser": "^1.3.6",
    "@a-novel/package-authentication": "*",
    "@a-novel/platform-authentication": "*",
    "@a-novel/service-authentication-rest": "^2.2.4",
    "@a-novel/uikit": "^0.12.3",
    "@iconify/svelte": "^5.1.0",
    "@sveltejs/kit": "^2.49.2",
    "@tolgee/format-icu": "^6.2.7",
    "@tolgee/svelte": "^6.2.7",
    "@tolgee/web": "^6.2.7",
    "svelte": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@a-novel-kit/nodelib-config": "^1.3.6",
    "@chromatic-com/storybook": "^5.0.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/sveltekit": "^10.1.11",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.0",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^7.0.0",
    "@types/node": "^24.10.2",
    "eslint-plugin-svelte": "^3.13.1",
    "publint": "^0.3.15",
    "react": "^19.2.3",
    "storybook": "^10.1.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6"
  },
  "packageManager": "pnpm@10.30.2",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
